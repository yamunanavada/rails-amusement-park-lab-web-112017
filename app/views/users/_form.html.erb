<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, placeholder: "Enter Password" %><br>
  <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><br>
  <%= f.label :"Height (in Inches)" %><br>
  <%= f.number_field :height %><br>
  <%= f.label :"How happy are you? (1-5 scale)" %><br>
  <%= f.number_field :happiness %><br>
  <%= f.label :"How nauseous are you? (1-5 scale)" %> <br>
  <%= f.number_field :nausea %><br>
  <%= f.label :"How many dollars are in your pocket?" %><br>
  <%= f.number_field :tickets %><br>
  <!-- may have to come back to tickets to convert to money -->
  <%= f.label :"Check box if you are a theme park owner" %>
  <%= f.check_box :admin  %><br>
  <%= f.submit %>

  <% end %>

  <%= link_to "Show", @user%> | <%=link_to "Back", users_path %>
